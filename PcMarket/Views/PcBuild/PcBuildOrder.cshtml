@model PcMarket.ViewModels.PcComputerViewModel.PcBuildOrderDetailsView
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta charset="utf-8">
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <title>@ViewData["Title"]-შეკვეთა</title>
</head>
<form asp-controller="pcbuild" asp-action="pcbuildorder" method="post" class="mt-3">
    <div class="row justify-content-center m-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BuildName)</th>
                    <th>@Html.DisplayNameFor(model => model.BuildPrice)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.BuildName</td>
                    <td>@Model.BuildPrice</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Adress" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Adress" class="form-control" />
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Mail" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">შეკვეთა</button>
            <button type="button" class="btn btn-primary" onclick="window.history.go(-1)">უკან</button>
        </div>
    </div>
</form>
