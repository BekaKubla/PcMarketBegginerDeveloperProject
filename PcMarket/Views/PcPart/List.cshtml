@model IEnumerable<PcMarket.Models.PcPartProp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = ViewBag.Title;
}

<h1 class="display-4 pb-5">@ViewBag.Title</h1>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-4">
        <img src="~/images/@item.FileName" class="img-fluid" alt="" />
        <h4>@item.PartName</h4>
        <p>
            @item.PartPrice
        </p>
        <p>
            <a asp-area="" asp-controller="pcpart" asp-action="order" asp-route-id="@item.ID" class="btn btn-primary">შეკვეთა</a>
            <a asp-area="admin" asp-controller="Cart" asp-action="add" asp-route-id="@item.ID" class="btn btn-primary">დამატება</a>
        </p>
    </div>
    }
</div>