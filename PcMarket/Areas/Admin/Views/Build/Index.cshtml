@model IEnumerable<PcMarket.Models.PcComputerProp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>ნაწილები</h1>

<p>
    <a asp-action="Create">განცხადების დამატება</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuildName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildPrice)
                </td>

                <td>
                    <a asp-action="Delete" asp-route-id="@item.ID">წაშლა</a>

                    <a asp-action="Edit" asp-route-id="@item.ID">ჩასწორება</a>

                    <a asp-area="" asp-controller="pcbuild" asp-action="pcbuilddetails" asp-route-id="@item.ID" target="_blank">სრულად</a>
                </td>
            </tr>
        }
    </tbody>
</table>