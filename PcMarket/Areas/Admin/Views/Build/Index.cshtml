@model IEnumerable<PcMarket.Models.PcComputerProp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta charset="utf-8">
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<h4 class="text-center text-uppercase">
    <a class="nav-link" asp-area="admin" asp-controller="build" asp-action="create"> განცხადების დამატება</a>
</h4>
<h4 class="text-center text-uppercase">კომპიუტერები</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BuildName)</th>
            <th>@Html.DisplayNameFor(model => model.BuildPrice)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/images/@item.FileName" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                    @item.BuildName
                    <div class="card-footer text-center">
                        <a asp-area="admin" asp-controller="build" asp-action="edit" asp-route-id="@item.ID">ჩასწორება</a>
                        <a asp-area="admin" asp-controller="build" asp-action="delete" asp-route-id="@item.ID">წაშლა</a>
                        <a asp-area="" asp-controller="pcbuild" asp-action="pcbuilddetails" asp-route-id="@item.ID" target="_blank">სრულად</a>
                    </div>
                </td>
                <td>
                    @item.BuildPrice ლარი
                    <div class="card-footer text-center">
                        <a asp-controller="pcbuild" asp-action="PcBuildOrder" asp-route-id="@item.ID">შეკვეთა</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>